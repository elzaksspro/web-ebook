    <style>
        /* reset */
        html,body {
            margin: 0;
            padding: 0;
            border: 0;
            font-size: 100%;
        }
        * {
            -webkit-box-sizing: border-box;
            -moz-box-sizing: border-box;
            box-sizing: border-box;
        }
    </style>

    <style>
        body {
            margin: 0 auto;
            background-color: rgba(74,121,147,0.89);
            background-image: radial-gradient(farthest-side ellipse at 10% 0, rgba(74,121,147,0.89),rgba(204,204,204,0.85) 80%,rgba(185,135,131,0.87) 120%);
            background-image: -webkit-radial-gradient(10% 0, farthest-side ellipse, rgba(74,121,147,0.89), rgba(204,204,204,0.85) 80%, rgba(185,135,131,0.87) 120%);
            background-image: -moz-radial-gradient(10% 0, farthest-side ellipse, rgba(74,121,147,0.89), rgba(204,204,204,0.85) 80%, rgba(185,135,131,0.87) 120%);
            background-attachment: fixed, fixed;
        }
        #container {

        }
    </style>

    <style>
        /* box */

        .wrap {
            overflow: hidden;
        }
        .box {
            float: left;
            position: relative;
        }
        .boxInner {
            position: absolute;
            bottom:5px;
            left: 5px;
            right: 5px;
            top: 5px;
            overflow: hidden;
            background: #fff;
            padding: 8px;
            padding-bottom: 0;
            border-radius: 10px;
        }
        .boxInner img {
            width: 100%;
            height: 100%;
        }
    </style>

    <style>
        /* media query */

        @media only screen and (max-width : 401px){
            .box {
                width: 50%;
                padding-bottom: 75%;
            }
        }
        @media only screen and (max-width : 600px) and (min-width : 401px) {
            .box {
                width: 33.3333%;
                padding-bottom: 49.9999%;
            }
        }
        @media only screen and (max-width : 800px) and (min-width : 601px) {
            .box {
                width: 25%;
                padding-bottom: 37.5%;
            }
        }
        @media only screen and (max-width : 1000px) and (min-width : 800px) {
            .box {
                width: 20%;
                padding-bottom: 30%;
            }
        }
        @media only screen and (max-width : 1200px) and (min-width : 1000px) {
            .box {
                width: 16.6666%;
                padding-bottom: 25%;
            }
        }
        @media only screen and (max-width : 1400px) and (min-width : 1200px) {
            .box {
                width: 14.2557%;
                padding-bottom: 21.4285%;
            }
        }
        @media only screen and (max-width : 1600px) and (min-width : 1400px) {
            .box {
                width: 12.5%;
                padding-bottom: 18.75%;
            }
        }

        @media only screen and (max-width : 1800px) and (min-width : 1600px) {
            .box {
                width: 11.1111%;
                padding-bottom: 16.6666%;
            }
        }
        @media only screen and (max-width : 2000px) and (min-width : 1800px) {
            .box {
                width: 10%;
                padding-bottom: 15%;
            }
        }

    </style>

    <style>
        #search {
            height: 38px;
            width: 180px;
            position: fixed;
            bottom: 0;
            left: 0;

        }

        input {
            outline: none;
        }
        /* remove the default style*/
        input[type=search] {
            -webkit-appearance: textfield;
            font-family: inherit;
            font-size: 100%;
        }
        input::-webkit-search-decoration,
        input::-webkit-search-cancel-button {
            display: none;
        }

        input[type=search] {
            background: #ededed url(http://cdn.tsq.me/ebook/search-icon.png) no-repeat 9px center;
            border: solid 1px #ccc;
            padding: 9px 10px 9px 15px;
            width: 40px;
            color: transparent;
            cursor: pointer;
            border-top-right-radius: 10em;
            border-bottom-right-radius: 10em;
            -webkit-transition: all .5s;
            -moz-transition: all .5s;
            transition: all .5s;
        }
        input[type=search]:hover {
            background-color: #fff;
            width: 130px;
            padding-left: 32px;
            color: #34495E;
            cursor: auto;
            background-color: #fff;
        }
        input[type=search]:focus {
            border-color: #1ABC9C;
        }

        /* placeholder */
        input:-moz-placeholder {
            color: transparent;
        }
        input::-webkit-input-placeholder {
            color: transparent;
        }
    </style>
</head>
<body>
<div id="container">
    <div class="wrap">
        <% for(var i=0; i<data.length; i++) {%>
        <div title="<%= data[i].bookName%>" class="box" data-originDlLink="<%= data[i].postSrc%>"  data-originDlLink="<%= data[i].originDlLink%>" data-originPageLink="<%= data[i].originPageLink%>" data-numberOfPages="<%= data[i].numberOfPages%>" data-datePublished="<%= data[i].datePublished%>">
            <div  class="boxInner">
                <a href="http://cdn.tsq.me/ebook/<%=data[i].customBookName%>.pdf" target="_blank"><img src="http://cdn.tsq.me/ebook/poster/<%= data[i].index%>.jpg"></a>
            </div>
        </div>
        <%}%>
    </div>
</div>

<div id="search">
    <form>
        <input type="search" placeholder="Search" autofocus>
    </form>
</div>
<script src="//cdn.tsq.me/ebook/jquery-2.1.4.min.js"></script>
<script>
$(function () {
    var boxArr = $('.box');
    $('form').submit(function (e) {
        filter($('[type="search"]').val().toLowerCase());
        return false;
    });
    function filter(val) {
        for (var i = 0; i < boxArr.length; i++) {
            var title = $(boxArr[i]).attr('title').toLowerCase();
            if (title.indexOf(val) === -1) {
                $(boxArr[i]).fadeOut('slow');
            } else {
                $(boxArr[i]).fadeIn('slow');

            }
        }
    }

});
</script>
